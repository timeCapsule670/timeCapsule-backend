{
  "info": {
    "name": "Forgot Password API",
    "description": "Collection for testing the forgot password flow with OTP verification",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Request OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "forgot-password"]
        },
        "description": "Step 1: Request OTP to be sent to user's email"
      },
      "response": []
    },
    {
      "name": "2. Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["auth", "verify-otp"]
        },
        "description": "Step 2: Verify the OTP received via email"
      },
      "response": []
    },
    {
      "name": "3. Reset Password with OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"NewPassword123\",\n  \"confirmPassword\": \"NewPassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/reset-password-with-otp",
          "host": ["{{base_url}}"],
          "path": ["auth", "reset-password-with-otp"]
        },
        "description": "Step 3: Reset password using verified OTP"
      },
      "response": []
    },
    {
      "name": "Test Invalid Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"invalid-email\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "forgot-password"]
        },
        "description": "Test validation error for invalid email format"
      },
      "response": []
    },
    {
      "name": "Test Invalid OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"12345\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["auth", "verify-otp"]
        },
        "description": "Test validation error for OTP length (must be 6 digits)"
      },
      "response": []
    },
    {
      "name": "Test Password Mismatch",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"NewPassword123\",\n  \"confirmPassword\": \"DifferentPassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/reset-password-with-otp",
          "host": ["{{base_url}}"],
          "path": ["auth", "reset-password-with-otp"]
        },
        "description": "Test validation error when passwords don't match"
      },
      "response": []
    },
    {
      "name": "Test Weak Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"otp\": \"123456\",\n  \"newPassword\": \"weak\",\n  \"confirmPassword\": \"weak\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/reset-password-with-otp",
          "host": ["{{base_url}}"],
          "path": ["auth", "reset-password-with-otp"]
        },
        "description": "Test validation error for weak password (doesn't meet requirements)"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
